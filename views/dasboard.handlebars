<button type="submit" class="btn bg-info"><a href="/dashboard/post"> Add a post</a></button>


{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>

    </li>
    {{/each}}
  </ol>
</section>
{{/if}}
</main>
